{
  "name": "skeet-sql",
  "version": "1.0.0",
  "engines": {
    "pnpm": "8.15.3",
    "npm": "please_use_pnpm_instead",
    "node": "20"
  },
  "packageManager": "pnpm@8.15.3",
  "scripts": {
    "test": "pnpm build && vitest",
    "nodemon": "npx ts-node devBuild.ts && node ./dist/index.js",
    "dev": "nodemon",
    "start": "node ./dist/index.js",
    "build": "npx ts-node build.ts",
    "devBuild": "npx ts-node devBuild.ts",
    "db:dev": "npx prisma migrate dev",
    "db:deploy": "npx prisma deploy",
    "db:deploy:production": "dotenv -e .env.build npx prisma migrate dev",
    "db:generate:production": "dotenv -e .env.build npx prisma generate",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "db:studio:p": "dotenv -e .env.build npx prisma studio",
    "db:reset": "npx prisma migrate reset --force"
  },
  "dependencies": {
    "@hono/node-server": "1.8.1",
    "@prisma/client": "5.9.1",
    "@skeet-framework/firestore": "2.4.2",
    "@skeet-framework/utils": "1.2.4",
    "hono": "4.0.4",
    "prisma": "5.9.1"
  },
  "devDependencies": {
    "@types/node": "20.11.19",
    "dotenv": "16.4.4",
    "esbuild": "0.20.1",
    "esbuild-plugin-alias-path": "^2.0.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "nodemon": "3.0.3",
    "prettier": "3.2.5",
    "prettier-plugin-prisma": "5.0.0",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.7.1",
    "typescript": "5.3.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.0"
  }
}
